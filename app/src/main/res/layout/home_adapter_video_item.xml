<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/video_thumbnail_image_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/video_thumbnail_content_description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <TextView
            tools:text="A Video Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/video_title_text_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/video_thumbnail_image_view"/>

</android.support.constraint.ConstraintLayout>